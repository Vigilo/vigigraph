<IfModule !mod_wsgi.c>
LoadModule wsgi_module modules/mod_wsgi.so
</IfModule>

<IfModule mod_wsgi.c>

WSGISocketPrefix /var/run/wsgi
WSGIRestrictStdout off
WSGIPassAuthorization on
WSGIDaemonProcess vigigraph processes=4 threads=1 display-name=vigilo-vigigraph
WSGIScriptAlias /vigilo/vigigraph "@sysconfdir@/vigilo/vigigraph/vigigraph.wsgi"

KeepAlive Off

<Directory "@sysconfdir@/vigilo/vigigraph/">
    <IfModule mod_headers.c>
        Header set X-UA-Compatible "IE=edge"
    </IfModule>

    <Files "vigigraph.wsgi">
        WSGIProcessGroup vigigraph
        WSGIApplicationGroup %{GLOBAL}

        <IfModule mod_authz_core.c>
            # Apache 2.4
            Require all granted
        </IfModule>
        <IfModule !mod_authz_core.c>
            # Apache 2.2
            Order Deny,Allow
            Allow from all
        </IfModule>
    </Files>
</Directory>

</IfModule>
